{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Doki Doki Mod Manager",
  "version": "1.0.0",
  "identifier": "com.dokimodmanager.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Doki Doki Mod manager",
        "width": 1200,
        "height": 600,
        "decorations": false,
        "maximized": false,
        "resizable": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
